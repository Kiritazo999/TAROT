<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fonone"
    tools:context=".MainActivityScreen">

    <TextView
        android:id="@+id/textViewFortune"
        android:layout_width="327dp"
        android:layout_height="57dp"
        android:text="Гадание на вопрос по одной карте"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#733076"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/textViewNameTaro"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginBottom="28dp"
        android:text="Таро Уэйта"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#733076"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewFortune"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="366dp"
        android:layout_height="228dp"
        android:text="Карта Таро даст вам ответ на интересующий вопрос, поможет преодолеть существующие ограничения, покажет, как найти верный путь и убережёт вас от досадных неудач. Нажмите на кнопку в виде карты, задайте вопрос и не забудте поставить вопросительный знак. Приложение разработанно Белоусовым Андреем Фёдоровичем. Студентом группы 151115"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="147dp"
        android:layout_height="215dp"
        android:layout_marginTop="42dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
        app:layout_constraintVertical_bias="0.168"
        app:srcCompat="@drawable/fon"
        tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>